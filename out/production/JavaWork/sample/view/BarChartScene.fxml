<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.BarChartSceneController">
    <top>
        <Label fx:id="labelTitle" alignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font size="21.0" />
            </font>
        </Label>
    </top>
    <bottom>
        <Group BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="buttonReload" layoutX="82.0" layoutY="-8.0" mnemonicParsing="false" onAction="#reloadAnimation" prefHeight="34.0" prefWidth="98.0" text="RELOAD" />
                <Button fx:id="buttonPause" layoutX="-53.0" layoutY="-8.0" mnemonicParsing="false" onAction="#pauseAnimation" prefHeight="34.0" prefWidth="98.0" text="PAUSE" />
                <Button fx:id="buttonStart" layoutX="-189.0" layoutY="-8.0" mnemonicParsing="false" onAction="#startAnimation" prefHeight="34.0" prefWidth="98.0" text="START" />
            <CheckBox fx:id="checkBoxShowHide" layoutX="194.0" mnemonicParsing="false" text="Show" />
            </children>
        </Group>
    </bottom>
    <center>
        <BarChart fx:id="barGraphic" animated="false" focusTraversable="true" BorderPane.alignment="CENTER">
            <xAxis>
                <CategoryAxis fx:id="categoryAxis" side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="numberAxis" side="LEFT" />
            </yAxis>
        </BarChart>
    </center>
</BorderPane>
