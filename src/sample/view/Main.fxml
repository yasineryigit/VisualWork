<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="328.0" minWidth="640.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.MainController">
   <top>
      <Group BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" layoutX="117.0" layoutY="56.0" text="Welcome to the Animated Charts">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="163.0" layoutY="125.0" text="Please select a source">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Group>
   </top>
   <bottom>
      <Button fx:id="buttonStartAnimation" alignment="CENTER" mnemonicParsing="false" onAction="#startAnimationScene" prefHeight="31.0" prefWidth="232.0" text="Start Animation" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Button>
   </bottom>
   <center>
      <Group BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelPath" alignment="CENTER" layoutY="12.0" prefHeight="17.0" prefWidth="600.0">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            <ComboBox fx:id="comboBoxAnimationType" layoutX="225.0" layoutY="96.0" prefWidth="150.0" promptText="Animation Type" />
            <Button fx:id="buttonSelect" alignment="CENTER" layoutX="257.0" layoutY="35.0" mnemonicParsing="false" onAction="#selectFile" prefHeight="31.0" prefWidth="86.0" text="Select" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Group>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>